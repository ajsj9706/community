<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.community.dao.MemberDao">
    <resultMap id="loginMember" type="com.community.model.LoginModel">
        <id property="userId" column="userId"/>
        <result property="profile" column="profile"/>
    </resultMap>
    <insert id="signUp" parameterType="com.community.model.MemberModel">
        INSERT INTO
            community_member(encode, userId, userPw)
        VALUES
            (#{encode}, #{userId}, #{userPw})
    </insert>

    <update id="signUpProfile" parameterType="com.community.model.MemberModel">
        UPDATE
            community_member
        SET
            profile = #{profile}
        WHERE
            userId = #{userId}
    </update>

    <select id="login" resultMap="loginMember">
        SELECT
            userId, profile
        FROM
            community_member
        WHERE
            userId = #{userId} and userPw = #{userPw}
    </select>

    <select id="getMemberList" resultType="com.community.model.MemberModel">
        SELECT
            userId, userPw, profile
        FROM
            community_member
    </select>

    <delete id="kickMember" parameterType="String">
        DELETE FROM
            community_member
        WHERE
            userId = #{userId}
    </delete>

    <update id="updateProfile" parameterType="com.community.model.MemberModel">
        UPDATE
            community_member
        SET
            profile = #{profile}
        WHERE
            userId = #{userId}
    </update>

    <update id="updateUser" parameterType="com.community.model.MemberModel">
        UPDATE
            community_member
        SET
            userPw = #{userPw}
        WHERE
            userId = #{userId}
    </update>

    <select id="getUserInfo" resultType="com.community.model.LoginModel">
        SELECT
            userId, profile
        FROM
            community_member
        WHERE
            encode = #{encode}
    </select>


</mapper>